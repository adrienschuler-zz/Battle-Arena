#wrapper(data-role='page')
	#header(data-role='header')
		a(href='/', data-direction='reverse') BATTLE ARENA
	
	#content(data-role='content')
		h2 Login

		form(action='#', method='post', id='login')
			input(type='text', name='user[login]', placeholder='Username')
